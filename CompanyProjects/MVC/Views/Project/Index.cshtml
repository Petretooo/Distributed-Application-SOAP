@model IEnumerable<MVC.ViewModels.ProjectViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<form asp-controller="Project" asp-action="Index">
    <p>
        Name: <input type="text" name="name">
        <input type="submit" value="Search" />
    </p>
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.managerName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelProject => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelProject => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelProject => item.Created)
    </td>
    <td>
        @Html.DisplayFor(modelProject => item.Client)
    </td>
    <td>
        @Html.DisplayFor(modelProject => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelProject => item.managerName)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
    }
</table>
